# Use specific Node.js version for better compatibility
FROM node:20.11-alpine

# Set working directory
WORKDIR /app

# Copy package.json only
COPY package.json ./

# Install all dependencies without package-lock.json
RUN npm install --legacy-peer-deps --no-audit --no-optional

# Copy source code
COPY . .

# Build the application
RUN npm run build

# Expose port
EXPOSE 5173

# Start the application using our custom Express server
CMD ["npm", "start"] 